<Window x:Class="PortfolioTrading.Modules.Account.ChangePortfSymbolDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="改变组合合约" Height="180" Width="260" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="0,0,3.2,6.2">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="10">
            <Button Margin="6" Width="80" IsDefault="True" Name="btnOK" Click="btnOK_Click">确定</Button>
            <Button Margin="6" Width="80" IsCancel="True">取消</Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Margin="0, 10, 0 , 0">
            <DockPanel HorizontalAlignment="Center" Margin="10">
                <TextBlock VerticalAlignment="Center" Margin="6, 0, 6, 0">第一腿</TextBlock>
                <TextBox Width="100" Name="txtFirstLeg"></TextBox>
            </DockPanel>
            <DockPanel HorizontalAlignment="Center" Margin="10">
                <TextBlock VerticalAlignment="Center" Margin="6">第一腿</TextBlock>
                <TextBox Width="100" Name="txtSecondLeg"></TextBox>
            </DockPanel>
        </StackPanel>

    </DockPanel>
</Window>
