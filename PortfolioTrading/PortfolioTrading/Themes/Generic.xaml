            </Grid>-->
            </Grid>
        </Grid>
    </DataTemplate>
    
    <DataTemplate x:Key="changePositionTemplate">
        <Grid ShowGridLines="True">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="4"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="330"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                            Grid.Row="0">
                    <TextBlock >差价:</TextBlock>
                    <TextBlock Text="{Binding Diff}" Width="50"></TextBlock>
                </StackPanel>
                <Grid Grid.Row="1" ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <TextBlock >多差:</TextBlock>
                        <TextBlock Text="{Binding LongDiff, StringFormat=F}" Width="50"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <TextBlock >空差:</TextBlock>
                        <TextBlock Text="{Binding ShortDiff, StringFormat=F}" Width="50"></TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <Grid Grid.Column="1" Margin="8, 0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <TextBlock VerticalAlignment="Center">平仓:</TextBlock>
                    <TextBlock VerticalAlignment="Center" Text="{Binding StrategySetting.CloseLeg}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <TextBlock VerticalAlignment="Center">触发:</TextBlock>
                    <TextBlock Width="60" Text="{Binding StrategySetting.TriggerCondition, Converter={StaticResource condDisplayConverter}}" 
                           VerticalAlignment="Center"/>
                    <TextBlock Width="60" Text="{Binding StrategySetting.Threshold}" 
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </DataTemplate>
    
    <DataTemplate x:Key="boxBreakTemplate">
        <TextBlock>箱体突破监视</TextBlock>
    </DataTemplate>
    
    <local:PortfMonTemplateSelector x:Key="portfMonSelector"
                                    ArbitrageTemplate="{StaticResource arbitrageTemplate}"
                                    ChangePositionTemplate="{StaticResource changePositionTemplate}"
                                    BoxBreakTemplate="{StaticResource boxBreakTemplate}"/>
    
    <Style TargetType="{x:Type local:PortfMonitorPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PortfMonitorPanel}">
                    <ContentControl ContentTemplateSelector="{StaticResource portfMonSelector}"
                                    VerticalAlignment="Center"
                                    Content="{Binding }"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:PriceDiffWatchPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PriceDiffWatchPanel}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="Blue"
                            BorderThickness="0, 1, 1, 1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border Grid.Column="0" Grid.Row="0" BorderBrush="Blue" BorderThickness="0, 0, 1, 0">
                                <TextBlock Margin="4" HorizontalAlignment="Center">价差</TextBlock>
                            </Border>
                            <Border Grid.Column="0" Grid.Row="1" BorderBrush="Blue" BorderThickness="0, 0, 1, 0">
                                <TextBlock Text="{Binding Diff}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="0" BorderBrush="Blue" BorderThickness="0, 0, 1, 1">
                                <DockPanel>
                                    <TextBlock Margin="4, 2">多差</TextBlock>
                                    <TextBlock Text="{Binding LongDiff}" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16"/>
                                </DockPanel>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="1" BorderBrush="Blue" BorderThickness="0, 0, 1, 0">
                                <DockPanel>
                                    <TextBlock Margin="4, 2">盘口</TextBlock>
                                    <TextBlock Margin="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16">20</TextBlock>
                                </DockPanel>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="0" BorderBrush="Blue" BorderThickness="0, 0, 0, 1">
                                <DockPanel>
                                    <TextBlock Margin="4, 2">空差</TextBlock>
                                    <TextBlock Text="{Binding ShortDiff}" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16"/>
                                </DockPanel>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="1" BorderBrush="Blue">
                                <DockPanel>
                                    <TextBlock Margin="4, 2">盘口</TextBlock>
                                    <TextBlock Margin="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16">20</TextBlock>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
