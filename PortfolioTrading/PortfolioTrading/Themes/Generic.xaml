                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <TextBlock >多差:</TextBlock>
                        <TextBlock Text="{Binding LongDiff}" Width="50"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <TextBlock >空差:</TextBlock>
                        <TextBlock Text="{Binding ShortDiff}" Width="50"></TextBlock>
